{
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 4 --timeout 120 --chdir backend wsgi:app",
      "healthcheckPath": "/",
      "healthcheckTimeout": 300,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }