{
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "startCommand": "cd backend && gunicorn --bind 0.0.0.0:$PORT --workers 2 --timeout 300 app:app",
      "healthcheckPath": "/",
      "healthcheckTimeout": 300,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }